{
  "name": "@oboku/workspae",
  "version": "1.0.0",
  "private": true,
  "repository": "git@github.com:mbret/oboku.git",
  "author": "Maxime Bret <bret.maxime@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": "14.x"
  },
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "start:web": "cd packages/web && yarn start",
    "start:web-prod": "cd packages/web && yarn start-prod",
    "start:landing": "cd packages/landing && yarn start",
    "start:shared": "cd packages/shared && yarn watch",
    "start:api-lambda": "cd packages/api-lambda && yarn watch",
    "start:back": "docker-compose up -d && concurrently -n api-lambda \"yarn start:api-lambda\"",
    "start:front": "concurrently -n web,shared \"yarn start:web\" \"yarn start:shared\"",
    "deploy-server": "pm2 stop oboku-api && git fetch origin && git reset --hard origin/release && yarn && pm2 start oboku-api && pm2 log oboku-api",
    "dev:fix:sharp": "rm -rf node_modules/sharp && rm -rf packages/api-lambda/node_modules/sharp && cp -R packages/api-lambda/sharp-install/node_modules/sharp packages/api-lambda/node_modules/sharp",
    "tsc:web": "cd packages/web && yarn tsc",
    "tsc:shared": "cd packages/shared && yarn tsc",
    "tsc:api-lambda": "cd packages/api-lambda && yarn tsc",
    "tsc": "concurrently -n tsc:web,tsc:shared,tsc:api-lambda \"yarn tsc:web\" \"yarn tsc:shared\" \"yarn tsc:api-lambda\""
  },
  "dependencies": {
    "concurrently": "^6.2.0",
    "sharp": "^0.28.3"
  },
  "devDependencies": {
    "webpack-bundle-analyzer": "^4.3.0",
    "webpack-node-externals": "^2.5.2"
  }
}
