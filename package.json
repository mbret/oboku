  "engines": {
    "node": "16.x"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start:web": "lerna run start --scope=@oboku/web",
    "start:landing": "lerna run landing:start",
    "start:api": "lerna run api:start",
    "build": "lerna run build",
    "build:web": "lerna run build --scope=@oboku/web",
    "build:api": "lerna run build --scope=@oboku/api",
    "build:landing": "lerna run landing:build",
    "test": "lerna run test",
    "tsc": "lerna run tsc",
    "format": "prettier -w . && lerna run lint --scope @oboku/api -- --fix",
    "postinstall": "npx ts-node scripts/installSharp.ts --project scripts/tsconfig.json --platform darwin"
  },
  "devDependencies": {
    "@rollup/plugin-replace": "^5.0.2",
    "@serverless/typescript": "^3.27.0",
    "@types/crypto-js": "^4.1.1",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@vitejs/plugin-react": "^3.1.0",
    "concurrently": "^7.6.0",
    "esbuild": "^0.16.17",
    "lerna": "^6.4.1",
    "prettier": "^2.8.4",
    "rollup-plugin-analyzer": "^4.0.0",
    "rollup-plugin-node-externals": "^5.1.2",
    "rollup-plugin-polyfill-node": "^0.12.0",
    "serverless": "^3.27.0",
    "serverless-bundle": "^6.0.0",
    "serverless-esbuild": "^1.37.3",
    "serverless-offline": "^12.0.4",
    "serverless-webpack": "^5.7.0",
    "typescript": "^4.9.5",
    "vite": "^4.1.1",
    "vite-plugin-dts": "^1.7.2",
    "vite-plugin-pwa": "^0.14.2",
    "vite-plugin-svgr": "^2.4.0",
    "vitest": "^0.28.4",
    "webpack-bundle-analyzer": "^4.7.0",
    "webpack-cli": "^5.0.1",
    "webpack-node-externals": "^3.0.0"
  },
  "packageManager": "yarn@3.3.1",
  "dependencies": {
    "arg": "^5.0.2",
    "sharp": "^0.31.3"
  }
