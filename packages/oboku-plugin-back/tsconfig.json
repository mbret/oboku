{
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "ES2017", // only version that works with aws node env
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noUncheckedIndexedAccess": true,
    "declaration": false
  },
  "include": ["src"],
  "exclude": ["webpack.config.js", "**/dist", "**/*.test.ts"]
}